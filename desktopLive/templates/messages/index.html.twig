<style>
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background-color: #f5f7fb;
        color: #333;
        height: 100vh;
        overflow: hidden;
    }

    .messages-container {
        display: flex;
        height: calc(100vh - 60px);
    }

    .conversations {
        width: 30%;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .user-profil {
        display: flex;
        align-items: center;
        padding: 15px;
        background-color: #f9f9f9;
        border-bottom: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .user-profil img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    .user-info {
        flex: 1;
    }

    .user-info .name {
        font-weight: bold;
        font-size: 1rem;
    }

    .user-info .status {
        font-size: 0.8rem;
        color: #28a745;
    }

    .conversations-header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f9f9f9;
    }

    .conversations-header h4 {
        font-size: 1.2rem;
        color: #567AF4;
    }

    .conversations-header input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 20px;
        width: 70%;
        font-size: 0.9rem;
    }

    .conversation-tabs {
        display: flex;
        border-bottom: 1px solid #ddd;
        background-color: #f9f9f9;
    }

    .tab {
        flex: 1;
        text-align: center;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .tab.active {
        border-bottom: 2px solid #567AF4;
        color: #567AF4;
        font-weight: bold;
    }

    .tab:hover {
        background-color: #edf2ff;
    }

    .conversation-list {
        flex: 1;
        overflow-y: auto;
    }

    .conversation-item {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .conversation-item.active {
        background-color: #edf2ff;
    }

    .conversation-item:hover {
        background-color: #f9f9f9;
    }

    .conversation-item img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    .conversation-info {
        flex: 1;
    }

    .conversation-info strong {
        display: block;
        margin-bottom: 4px;
    }

    .conversation-info p {
        font-size: 0.85em;
        color: #666;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 150px;
    }

    .time {
        font-size: 0.75em;
        color: #999;
        align-self: flex-start;
    }

    .unread-count {
        background-color: #3498db;
        color: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        margin-top: 4px;
    }

    .group-indicator {
        background-color: #567AF4;
        color: white;
        border-radius: 4px;
        padding: 2px 6px;
        font-size: 0.7rem;
        margin-left: 5px;
    }

    .chat-window {
        flex: 1;
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .chat-header {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        border-bottom: 1px solid #ddd;
        background-color: #f9f9f9;
    }

    .chat-header img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    .chat-header-info {
        flex: 1;
    }

    .chat-header-info .status {
        font-size: 0.8rem;
        color: #28a745;
    }

    .chat-header-actions {
        display: flex;
        gap: 15px;
    }

    .chat-header-actions i {
        font-size: 1.2rem;
        color: #777;
        cursor: pointer;
    }

    .chat-messages {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        background: #f0f2f5;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .message {
        max-width: 70%;
        padding: 12px 15px;
        margin: 5px 0;
        border-radius: 18px;
        position: relative;
        line-height: 1.4;
    }

    .message.received {
        background: #ffffff;
        align-self: flex-start;
        border-bottom-left-radius: 4px;
    }

    .message.sent {
        background: #567AF4;
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 4px;
    }

    .message-time {
        font-size: 0.7rem;
        margin-top: 5px;
        opacity: 0.8;
        text-align: right;
    }

    .chat-input {
        display: flex;
        border-top: 1px solid #ddd;
        padding: 15px;
        align-items: center;
        background-color: #f9f9f9;
    }

    .chat-input-actions {
        display: flex;
        gap: 15px;
        margin-right: 15px;
    }

    .chat-input-actions i {
        font-size: 1.2rem;
        color: #777;
        cursor: pointer;
    }

    .chat-input input {
        flex: 1;
        border: 1px solid #ddd;
        padding: 12px 15px;
        outline: none;
        border-radius: 20px;
        font-size: 1rem;
    }

    .chat-input button {
        background: #567AF4;
        border: none;
        color: white;
        padding: 10px 18px;
        cursor: pointer;
        border-radius: 50%;
        margin-left: 10px;
        font-size: 1.2rem;
    }

    .chat-input button:hover {
        background: #4668d3;
    }

    .sidebar {
        width: 250px;
        background-color: white;
        border-left: 1px solid #ddd;
        padding: 15px;
        overflow-y: auto;
    }

    .sidebar-section {
